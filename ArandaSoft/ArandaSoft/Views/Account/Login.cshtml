@{
    ViewBag.Title = "Inicio de sesión";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-wrap py-5">
                <h3 class="text-center mb-0">Inicio de Sesión</h3>
                <p class="text-center">Por favor ingrese los datos</p>
                <form method="post" action="@Url.Action("Login", "Account")">
                    <div class="form-group">
                        <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-user"></span></div>
                        <input type="text" class="form-control" placeholder="Nombre de usuario" required="" id="userName" name="userName">
                    </div>
                    <div class="form-group">
                        <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-lock"></span></div>
                        <input type="password" class="form-control" placeholder="Contraseña" required="" id="password" name="password">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn form-control btn-primary rounded submit px-3">Ingresar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@if (ViewBag.Error != null)
{
    <div class="row alert-dismissable">
        <div class="col-md-12 text-center">
            <div class="alert alert-danger">
                @ViewBag.Error
            </div>
        </div>
    </div>
}
<script>
    setTimeout(function () {
        var alerts = document.getElementsByClassName("alert-dismissable");

        for (var i = 0; i < alerts.length; i++) {
            alerts[i].style.display = "none";
        }
    }, 3000);
</script>
